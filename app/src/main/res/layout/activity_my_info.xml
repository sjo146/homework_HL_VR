<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MyInfo.MyInfoActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Space
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@drawable/earth" android:id="@+id/imageView2"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp" app:srcCompat="@mipmap/user"
                    android:id="@+id/imageView3"
                    android:layout_weight="1"/>
            <TextView
                    android:text="用户名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/usernameTip" android:layout_weight="1"/>
            <TextView
                    android:text="放用户名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/username" android:layout_weight="1"/>
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp" app:srcCompat="@mipmap/right" android:id="@+id/imageView4"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp" app:srcCompat="@mipmap/key"
                    android:id="@+id/key"
                    android:scaleType="fitStart"
                    android:layout_weight="1"/>
            <TextView
                    android:text="密码"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/pwdTip" android:layout_weight="1"/>
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp" app:srcCompat="@mipmap/right" android:id="@+id/keyDetail"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp" app:srcCompat="@mipmap/heart"
                    android:id="@+id/label"
                    android:layout_weight="1"/>
            <TextView
                    android:text="我的点赞"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/likeTip" android:layout_weight="1"/>
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp" app:srcCompat="@mipmap/right" android:id="@+id/likeDetail"
                    android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp" app:srcCompat="@mipmap/star"
                    android:id="@+id/collection"
                    android:layout_weight="1"/>
            <TextView
                    android:text="我的收藏"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/collectionTip" android:layout_weight="1"/>

            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp" app:srcCompat="@mipmap/right" android:id="@+id/collectionDetail"
                    android:layout_weight="1"/>
        </LinearLayout>


        <ImageView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#c2c2c2"
                android:layout_alignParentBottom="true"
                android:visibility="gone"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>