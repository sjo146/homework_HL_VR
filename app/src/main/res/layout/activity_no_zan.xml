<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MyInfo.NoZanActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/commom_top"
                android:id="@+id/top">
            <include
                    android:id="@+id/ly_register_bar"
                    layout="@layout/activity_main_login_navigation_bar" />
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/earth" android:id="@+id/imageView2"/>
            <TextView
                    android:text="用户名"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/username"/>
            <TextView
                    android:text="个性签名"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/personal"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="400dp" android:gravity="center">
            <TextView
                    android:text="你还没有点赞哦，快去看看吧"
                    android:textSize="@dimen/f4"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" android:id="@+id/textView2"/>
        </LinearLayout>
        <Button
                android:text="去看看"
                android:layout_width="200dp"
                android:background="@drawable/bg_login_submit"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_height="wrap_content" android:id="@+id/button"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>